---
import Layout from '@/layouts/Layout.astro';
import Header from '@/layouts/Header.astro';
import Footer from '@/layouts/Footer.astro';

import Wrapper from '@/components/Wrapper.astro';

import Preloader from '@/components/Preloader.astro';
import Hero from '@/components/Hero.astro';
import About from '@/components/About.astro';
import Sponsors from '@/components/Sponsors.astro';
import Cta from '@/components/Cta.astro';
import Speakers from '@/components/Speakers.astro';
import Schedule from '@/components/Schedule.astro';
---

<Layout
  title="KubeFest - Evento de Kubernetes en Logroño, La Rioja: Infraestructura, IA y Más"
  description="Únete al evento de Kubernetes más destacado en Logroño, La Rioja, donde explorarás las últimas tendencias en infraestructura, herramientas de IA y más. Con la participación de expertos como Adrián Barrio, Rodrigo Tomé, Jorge Pérez y Diego Cristóbal, esta es tu oportunidad de aprender, conectar y crecer en el emocionante mundo de Kubernetes. ¡Reserva tu lugar ahora en el KubeFest!"
>
  <Wrapper>
    <Preloader delay={350} />

    <Header />

    <Hero />

    <About />

    <Speakers />

    <Schedule />

    <Sponsors />

    <Cta />

    <Footer />
  </Wrapper>
</Layout>
